/* pages/ocr/ocr.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  text-align: center;
  margin-bottom: 40rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 上传区域样式 */
.upload-section {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.image-preview {
  margin-bottom: 30rpx;
}

.image-preview image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
}

.upload-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 40rpx;
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.upload-btn.selected {
  border-color: #3cc51f;
  background-color: #f0f9ff;
}

.upload-btn .iconfont {
  font-size: 80rpx;
  color: #3cc51f;
  margin-bottom: 20rpx;
}

.upload-btn text {
  font-size: 32rpx;
  color: #666;
}

.upload-btn.selected .iconfont {
  color: #3cc51f;
}

/* 操作区域样式 */
.action-section {
  margin-bottom: 30rpx;
}

.recognize-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  background: linear-gradient(135deg, #3cc51f, #2dd41f);
  border: none;
  font-size: 36rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 20rpx rgba(60, 197, 31, 0.3);
}

/* 结果区域样式 */
.result-section {
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.result-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.result-actions {
  display: flex;
  gap: 20rpx;
}

.copy-btn {
  background-color: #3cc51f;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.result-content {
  padding: 30rpx;
}

.result-content textarea {
  width: 100%;
  min-height: 200rpx;
  background-color: #fafafa;
  border: 1rpx solid #eee;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

/* 历史记录样式 */
.history-section {
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.1);
}

.history-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.history-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.clear-btn {
  background-color: #ff4757;
  color: #fff;
  border: none;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.history-list {
  max-height: 300rpx;
}

.history-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s ease;
}

.history-item:last-child {
  border-bottom: none;
}

.history-item:active {
  background-color: #f8f9fa;
}

.history-content {
  flex: 1;
  margin-right: 20rpx;
}

.history-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  display: block;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.history-delete {
  padding: 10rpx;
}

.history-delete .iconfont {
  font-size: 32rpx;
  color: #ff4757;
}

/* 图标字体 */
.iconfont {
  font-family: "iconfont";
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .container {
    padding: 15rpx;
  }

  .title {
    font-size: 42rpx;
  }

  .subtitle {
    font-size: 26rpx;
  }
}