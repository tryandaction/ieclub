/* pages/post-detail/post-detail.wxss - IEClub 主题样式 */
.container {
  background-color: #f9fafb;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
  font-size: 28rpx;
  color: #6b7280;
}

/* 帖子详情样式 - 使用卡片设计 */
.post-detail {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
}

.post-user {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #e5e7eb;
}

.username {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
}

.post-time {
  font-size: 26rpx;
  color: #6b7280;
}

.post-content {
  padding: 40rpx;
}

.post-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #4b5563;
  margin-bottom: 24rpx;
}

/* 图片网格 - 现代化布局 */
.image-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.post-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  flex-shrink: 0;
  transition: transform 0.2s ease;
}

.post-image:active {
  transform: scale(0.98);
}

/* 帖子操作 - 使用按钮系统 */
.post-actions {
  display: flex;
  padding: 24rpx 40rpx;
  border-top: 1rpx solid #f3f4f6;
  background-color: #f9fafb;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  transition: all 0.2s ease;
}

.action-item:active {
  background-color: #eff6ff;
}

.iconfont {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.action-count {
  font-size: 28rpx;
  color: #6b7280;
}

/* 评论区域样式 - 现代化设计 */
.comments-section {
  background-color: white;
  margin: 20rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
  background: linear-gradient(135deg, #3b82f6 0%, #9333ea 100%);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: white;
}

.add-comment-btn {
  background-color: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  backdrop-filter: blur(10rpx);
}

/* 评论输入框 - 现代化设计 */
.comment-input-area {
  padding: 24rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
  background-color: #f9fafb;
}

.input-container {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #e5e7eb;
}

.comment-input {
  border: none;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  background-color: transparent;
  min-height: 80rpx;
}

.comment-input:focus {
  outline: none;
}

.input-actions {
  display: flex;
  justify-content: flex-end;
  gap: 16rpx;
}

.cancel-btn, .submit-btn {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  font-size: 26rpx;
  border: none;
  font-weight: 500;
  transition: all 0.2s ease;
}

.cancel-btn {
  background-color: #f3f4f6;
  color: #6b7280;
}

.cancel-btn:active {
  background-color: #e5e7eb;
  transform: scale(0.98);
}

.submit-btn {
  background: linear-gradient(135deg, #3b82f6 0%, #9333ea 100%);
  color: white;
}

.submit-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

/* 评论列表 - 现代化卡片设计 */
.comments-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.comment-item {
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #f3f4f6;
  transition: background-color 0.2s ease;
}

.comment-item:active {
  background-color: #f9fafb;
}

.comment-item:last-child {
  border-bottom: none;
}

.comment-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.comment-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #e5e7eb;
}

.comment-username {
  font-size: 28rpx;
  font-weight: 600;
  color: #111827;
  margin-right: 20rpx;
}

.comment-time {
  font-size: 24rpx;
  color: #9ca3af;
}

.comment-content {
  padding-left: 76rpx;
}

.comment-text {
  font-size: 30rpx;
  line-height: 1.5;
  color: #4b5563;
}

/* 空状态 - 使用空状态样式 */
.no-comments {
  text-align: center;
  padding: 80rpx 40rpx;
  color: #9ca3af;
}

.no-comments .empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.no-comments .empty-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 加载容器样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  color: #6b7280;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 24rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* 头像样式优化 */
.post-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 2rpx solid #e5e7eb;
}

.post-author-info {
  display: flex;
  flex-direction: column;
}

.comment-user-info {
  display: flex;
  flex-direction: column;
  margin-left: 16rpx;
}

/* 动作按钮样式 */
.post-action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #6b7280;
  font-size: 26rpx;
  padding: 8rpx 0;
  transition: all 0.2s ease;
}

.post-action-btn:active {
  color: #3b82f6;
}

/* 动画效果 */
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}