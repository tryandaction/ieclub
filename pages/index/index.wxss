/* pages/index/index.wxss */
.container {
  background-color: #f8f9fa;
  min-height: 100vh;
}

/* 欢迎区域 */
.welcome-section {
  background: linear-gradient(135deg, #3cc51f, #2dd41f);
  padding: 60rpx 40rpx;
  border-radius: 0 0 32rpx 32rpx;
  color: #fff;
  margin-bottom: 40rpx;
}

.user-info {
  margin-bottom: 20rpx;
}

.welcome-text {
  font-size: 28rpx;
  opacity: 0.9;
}

.app-title {
  text-align: center;
}

.title {
  font-size: 56rpx;
  font-weight: bold;
  display: block;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.subtitle {
  font-size: 32rpx;
  opacity: 0.9;
}

/* 快速功能区 */
.quick-actions {
  display: flex;
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
}

.action-card {
  flex: 1;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.action-card:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.12);
}

.action-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  flex-shrink: 0;
}

.ocr-card .action-icon {
  background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
}

.publish-card .action-icon {
  background: linear-gradient(135deg, #4ecdc4, #44a08d);
}

.action-info {
  flex: 1;
}

.action-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.action-desc {
  font-size: 26rpx;
  color: #666;
}

/* 帖子列表区域 */
.posts-section {
  padding: 0 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.more-link {
  font-size: 28rpx;
  color: #3cc51f;
  text-decoration: none;
}

.post-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
}

.post-item:active {
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.post-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.post-user {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
}

.username {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.post-time {
  font-size: 24rpx;
  color: #999;
}

.post-content {
  margin-bottom: 20rpx;
}

.post-text {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  display: block;
  margin-bottom: 20rpx;
}

.post-images {
  margin-top: 20rpx;
}

.post-image {
  width: 100%;
  height: 300rpx;
  border-radius: 12rpx;
  background-color: #f0f0f0;
}

.post-actions {
  display: flex;
  gap: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.action-item .iconfont {
  font-size: 32rpx;
}

.action-count {
  font-size: 26rpx;
  color: #666;
}

.loading-more, .no-more {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .welcome-section {
    padding: 40rpx 30rpx;
  }

  .title {
    font-size: 48rpx;
  }

  .subtitle {
    font-size: 28rpx;
  }

  .quick-actions {
    padding: 0 15rpx;
    gap: 15rpx;
  }

  .action-card {
    padding: 30rpx 20rpx;
  }

  .posts-section {
    padding: 0 15rpx;
  }
}