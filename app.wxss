/* app.wxss - IEClub 风格小程序样式 */

/* ==================== 全局重置和基础样式 ==================== */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Helvetica Neue', Arial, sans-serif;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  background-color: #f9fafb;
  height: 100%;
}

view, text, image, button, input, textarea {
  box-sizing: border-box;
}

button {
  border: none;
  background: none;
  font-family: inherit;
}

button::after {
  border: none;
}

input, textarea {
  font-family: inherit;
  font-size: inherit;
}

image {
  max-width: 100%;
  height: auto;
  display: block;
}

/* ==================== IEClub 主题色系统 ==================== */
:root {
  --primary-blue: #3b82f6;
  --primary-blue-hover: #2563eb;
  --primary-blue-light: #dbeafe;
  
  --purple: #9333ea;
  --purple-hover: #7e22ce;
  --purple-light: #f3e8ff;
  
  --indigo: #6366f1;
  --indigo-light: #e0e7ff;
  
  --green: #10b981;
  --green-light: #d1fae5;
  
  --red: #ef4444;
  --red-light: #fee2e2;
  
  --gray-50: #f9fafb;
  --gray-100: #f3f4f6;
  --gray-200: #e5e7eb;
  --gray-300: #d1d5db;
  --gray-600: #4b5563;
  --gray-700: #374151;
}

/* ==================== 渐变背景（IEClub 风格） ==================== */
.gradient-primary {
  background: linear-gradient(135deg, #3b82f6 0%, #9333ea 100%);
}

.gradient-blue-purple {
  background: linear-gradient(to right, #3b82f6 0%, #9333ea 100%);
}

.gradient-indigo-purple {
  background: linear-gradient(to right, #6366f1 0%, #9333ea 100%);
}

.gradient-header {
  background: linear-gradient(135deg, #3b82f6 0%, #9333ea 100%);
  color: white;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  margin: 20rpx;
}

/* ==================== 卡片样式（IEClub 风格） ==================== */
.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
  transition: all 0.3s ease;
}

.card-shadow {
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.card-hover:active {
  transform: translateY(-2rpx);
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.12);
}

.card-border-left {
  border-left: 6rpx solid #3b82f6;
}

/* ==================== 按钮系统（IEClub 风格） ==================== */
.btn {
  padding: 24rpx 48rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
  text-align: center;
  transition: all 0.2s ease;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: #3b82f6;
  color: white;
}

.btn-primary:active {
  background-color: #2563eb;
  transform: scale(0.98);
}

.btn-purple {
  background-color: #9333ea;
  color: white;
}

.btn-purple:active {
  background-color: #7e22ce;
  transform: scale(0.98);
}

.btn-outline-blue {
  background-color: white;
  border: 2rpx solid #3b82f6;
  color: #3b82f6;
}

.btn-outline-blue:active {
  background-color: #eff6ff;
}

.btn-outline-purple {
  background-color: white;
  border: 2rpx solid #9333ea;
  color: #9333ea;
}

.btn-outline-purple:active {
  background-color: #faf5ff;
}

.btn-gray {
  background-color: #f3f4f6;
  color: #374151;
}

.btn-gray:active {
  background-color: #e5e7eb;
}

.btn-block {
  width: 100%;
  display: block;
}

.btn-large {
  padding: 28rpx 56rpx;
  font-size: 32rpx;
}

.btn-small {
  padding: 16rpx 32rpx;
  font-size: 24rpx;
}

/* ==================== 标签系统（IEClub 风格） ==================== */
.tag {
  display: inline-block;
  padding: 10rpx 20rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  margin-right: 12rpx;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.tag-blue {
  background-color: #dbeafe;
  color: #1e40af;
}

.tag-purple {
  background-color: #f3e8ff;
  color: #7e22ce;
}

.tag-green {
  background-color: #d1fae5;
  color: #065f46;
}

.tag-gray {
  background-color: #f3f4f6;
  color: #374151;
}

.tag-indigo {
  background-color: #e0e7ff;
  color: #4338ca;
}

.tag-red {
  background-color: #fee2e2;
  color: #991b1b;
}

/* ==================== 头部banner（IEClub 风格） ==================== */
.header-banner {
  background: linear-gradient(135deg, #3b82f6 0%, #9333ea 100%);
  color: white;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  margin: 20rpx;
}

.header-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.header-subtitle {
  font-size: 30rpx;
  opacity: 0.9;
  line-height: 1.5;
}

/* ==================== 导航栏 ==================== */
.navbar {
  background-color: white;
  border-bottom: 1rpx solid #f3f4f6;
  position: sticky;
  top: 0;
  z-index: 999;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.nav-item {
  padding: 24rpx 32rpx;
  border-radius: 12rpx;
  font-weight: 600;
  transition: all 0.2s ease;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.nav-item-active {
  background-color: #3b82f6;
  color: white;
}

.nav-item:not(.nav-item-active) {
  background-color: white;
  color: #374151;
}

.nav-item:not(.nav-item-active):active {
  background-color: #f9fafb;
}

/* ==================== 帖子卡片样式 ==================== */
.post-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
}

.post-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.post-avatar {
  font-size: 64rpx;
}

.post-author {
  font-weight: bold;
  font-size: 32rpx;
  color: #111827;
}

.post-meta {
  font-size: 26rpx;
  color: #6b7280;
}

.post-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.post-content {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

.post-actions {
  display: flex;
  gap: 48rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f3f4f6;
}

.post-action-btn {
  display: flex;
  align-items: center;
  gap: 12rpx;
  color: #6b7280;
  font-size: 26rpx;
  padding: 8rpx 0;
  transition: all 0.2s ease;
}

.post-action-btn:active {
  color: #3b82f6;
}

/* ==================== 活动卡片样式 ==================== */
.activity-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
}

.activity-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 24rpx;
}

.activity-info {
  margin-bottom: 24rpx;
}

.activity-info-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: #6b7280;
  font-size: 26rpx;
  margin-bottom: 12rpx;
}

.activity-description {
  font-size: 28rpx;
  color: #4b5563;
  line-height: 1.6;
  margin-bottom: 24rpx;
}

/* ==================== 用户匹配卡片 ==================== */
.match-card {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
  display: flex;
  gap: 32rpx;
}

.match-avatar {
  font-size: 80rpx;
}

.match-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 8rpx;
}

.match-badge {
  background-color: #d1fae5;
  color: #065f46;
  padding: 8rpx 20rpx;
  border-radius: 9999rpx;
  font-size: 24rpx;
  font-weight: 600;
  display: inline-block;
  margin-left: 16rpx;
}

.match-major {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 20rpx;
}

/* ==================== 个人资料页面 ==================== */
.profile-header {
  background: linear-gradient(to right, #6366f1 0%, #9333ea 100%);
  color: white;
  padding: 60rpx 40rpx;
  border-radius: 24rpx;
  margin: 20rpx;
  display: flex;
  align-items: center;
  gap: 40rpx;
}

.profile-avatar {
  font-size: 96rpx;
}

.profile-name {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 12rpx;
}

.profile-bio {
  font-size: 30rpx;
  opacity: 0.9;
}

.profile-section {
  background-color: white;
  padding: 40rpx;
  border-radius: 16rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
  border: 1rpx solid #f3f4f6;
}

.profile-section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 24rpx;
}

.project-item {
  border-left: 6rpx solid #3b82f6;
  padding-left: 24rpx;
  margin-bottom: 24rpx;
}

.project-item:last-child {
  margin-bottom: 0;
}

.project-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #111827;
  margin-bottom: 8rpx;
}

.project-desc {
  font-size: 26rpx;
  color: #6b7280;
}

/* ==================== 输入框样式 ==================== */
.input-wrapper {
  margin-bottom: 24rpx;
}

.input-field {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: white;
  transition: all 0.2s ease;
}

.input-field:focus {
  border-color: #3b82f6;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

.textarea-field {
  width: 100%;
  padding: 24rpx 32rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: white;
  min-height: 200rpx;
  line-height: 1.6;
}

.textarea-field:focus {
  border-color: #3b82f6;
  outline: none;
  box-shadow: 0 0 0 4rpx rgba(59, 130, 246, 0.1);
}

/* ==================== 模态框（弹窗） ==================== */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 9999;
  padding: 40rpx;
}

.modal-content {
  background-color: white;
  border-radius: 20rpx;
  padding: 48rpx;
  max-width: 100%;
  max-height: 90vh;
  overflow-y: auto;
}

.modal-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #111827;
  margin-bottom: 32rpx;
}

/* ==================== 搜索框 ==================== */
.search-bar {
  position: relative;
  margin: 20rpx;
}

.search-input {
  width: 100%;
  padding: 20rpx 20rpx 20rpx 80rpx;
  border: 1rpx solid #e5e7eb;
  border-radius: 12rpx;
  font-size: 28rpx;
  background-color: white;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #9ca3af;
}

/* ==================== 徽章（通知数字） ==================== */
.badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 32rpx;
  height: 32rpx;
  padding: 0 8rpx;
  background-color: #ef4444;
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 2rpx solid white;
}

/* ==================== 信息提示框 ==================== */
.info-box {
  background-color: #dbeafe;
  border: 1rpx solid #bfdbfe;
  border-radius: 12rpx;
  padding: 32rpx;
  margin: 20rpx;
  color: #1e40af;
  font-size: 26rpx;
  line-height: 1.6;
}

.success-box {
  background-color: #d1fae5;
  border: 1rpx solid #a7f3d0;
  color: #065f46;
}

.warning-box {
  background-color: #fed7aa;
  border: 1rpx solid #fdba74;
  color: #92400e;
}

.error-box {
  background-color: #fee2e2;
  border: 1rpx solid #fecaca;
  color: #991b1b;
}

/* ==================== 分割线 ==================== */
.divider {
  height: 1rpx;
  background-color: #e5e7eb;
  margin: 32rpx 0;
}

/* ==================== 工具类 ==================== */
.flex { display: flex; }
.flex-column { display: flex; flex-direction: column; }
.flex-center { display: flex; align-items: center; justify-content: center; }
.flex-between { display: flex; align-items: center; justify-content: space-between; }
.flex-wrap { flex-wrap: wrap; }
.flex-1 { flex: 1; }
.items-start { align-items: flex-start; }
.gap-8 { gap: 8rpx; }
.gap-12 { gap: 12rpx; }
.gap-16 { gap: 16rpx; }
.gap-24 { gap: 24rpx; }
.gap-32 { gap: 32rpx; }

/* 间距 */
.m-0 { margin: 0; }
.m-10 { margin: 10rpx; }
.m-20 { margin: 20rpx; }
.m-30 { margin: 30rpx; }
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.mx-20 { margin-left: 20rpx; margin-right: 20rpx; }
.my-20 { margin-top: 20rpx; margin-bottom: 20rpx; }

.p-0 { padding: 0; }
.p-10 { padding: 10rpx; }
.p-20 { padding: 20rpx; }
.p-30 { padding: 30rpx; }
.p-40 { padding: 40rpx; }
.px-20 { padding-left: 20rpx; padding-right: 20rpx; }
.px-40 { padding-left: 40rpx; padding-right: 40rpx; }
.py-20 { padding-top: 20rpx; padding-bottom: 20rpx; }

/* 文字对齐 */
.text-center { text-align: center; }
.text-left { text-align: left; }
.text-right { text-align: right; }

/* 文字大小 */
.text-24 { font-size: 24rpx; }
.text-26 { font-size: 26rpx; }
.text-28 { font-size: 28rpx; }
.text-30 { font-size: 30rpx; }
.text-32 { font-size: 32rpx; }
.text-36 { font-size: 36rpx; }
.text-40 { font-size: 40rpx; }
.text-48 { font-size: 48rpx; }

/* 文字粗细 */
.font-normal { font-weight: 400; }
.font-medium { font-weight: 500; }
.font-semibold { font-weight: 600; }
.font-bold { font-weight: bold; }

/* 颜色 */
.text-gray { color: #6b7280; }
.text-dark { color: #111827; }
.text-blue { color: #3b82f6; }
.text-purple { color: #9333ea; }
.text-white { color: white; }

.bg-white { background-color: white; }
.bg-gray { background-color: #f9fafb; }

/* 圆角 */
.rounded-8 { border-radius: 8rpx; }
.rounded-12 { border-radius: 12rpx; }
.rounded-16 { border-radius: 16rpx; }
.rounded-20 { border-radius: 20rpx; }
.rounded-24 { border-radius: 24rpx; }
.rounded-full { border-radius: 9999rpx; }

/* 阴影 */
.shadow-sm { box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04); }
.shadow { box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08); }
.shadow-lg { box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.12); }

/* 宽度 */
.w-full { width: 100%; }

/* ==================== 空状态 ==================== */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
  color: #9ca3af;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #6b7280;
}

/* ==================== 加载状态 ==================== */
.loading-container {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 60rpx;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #e5e7eb;
  border-top-color: #3b82f6;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes fadeIn {
  0% { opacity: 0; transform: translateY(20rpx); }
  100% { opacity: 1; transform: translateY(0); }
}

@keyframes slideIn {
  0% { opacity: 0; transform: translateX(-100%); }
  100% { opacity: 1; transform: translateX(0); }
}

@keyframes bounce {
  0%, 20%, 53%, 80%, 100% { transform: translate3d(0,0,0); }
  40%, 43% { transform: translate3d(0, -20rpx, 0); }
  70% { transform: translate3d(0, -10rpx, 0); }
  90% { transform: translate3d(0, -4rpx, 0); }
}

.animate-fade-in {
  animation: fadeIn 0.5s ease-out;
}

.animate-slide-in {
  animation: slideIn 0.3s ease-out;
}

.animate-bounce {
  animation: bounce 1s ease-in-out;
}

/* ==================== 容器 ==================== */
.container {
  min-height: 100vh;
  background-color: #f9fafb;
  padding-bottom: 40rpx;
}

.page-container {
  padding: 20rpx;
}

/* ==================== OCR上传区域 ==================== */
.ocr-upload-area {
  border: 2rpx dashed #d1d5db;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  background-color: #f9fafb;
  margin: 20rpx;
}

.ocr-icon {
  font-size: 96rpx;
  color: #9ca3af;
  margin-bottom: 24rpx;
}

.ocr-text {
  font-size: 28rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
}

.ocr-hint {
  font-size: 24rpx;
  color: #9ca3af;
  margin-top: 16rpx;
}